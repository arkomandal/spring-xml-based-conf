<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd
    ">

	<context:component-scan
		base-package="com.arkomandal.javaXmlBasedConf"></context:component-scan>

	<bean id="color" class="com.arkomandal.javaXmlBasedConf.Color"></bean>
	<bean id="tyre" class="com.arkomandal.javaXmlBasedConf.Tyre"></bean>
	<bean id="seat" class="com.arkomandal.javaXmlBasedConf.Seat"></bean>
	<bean id="maruti" class="com.arkomandal.javaXmlBasedConf.Maruti"></bean>
	<bean id="hyundai" class="com.arkomandal.javaXmlBasedConf.Hyundai"></bean>
	<bean id="honda" class="com.arkomandal.javaXmlBasedConf.Honda"></bean>
</beans>